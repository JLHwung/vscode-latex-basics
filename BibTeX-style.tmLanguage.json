{
  "name": "BibTeX style",
  "scopeName": "source.bst",
  "fileTypes": [
    "bst"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#command-keywords"
    },
    {
      "include": "#statements"
    }
  ],
  "repository": {
    "command-keywords": {
      "patterns": [
        {
          "name": "storage.type.function.bst",
          "match": "\\b(?<!\\.)FUNCTION\\b(?!\\.)"
        },
        {
          "name": "storage.type.int.bst",
          "match": "\\b(?<!\\.)INTEGERS\\b(?!\\.)"
        },
        {
          "name": "storage.type.var.bst",
          "match": "\\b(?<!\\.)ENTRY|MACRO|STRINGS\\b(?!\\.)"
        },
        {
          "name": "support.function.bst",
          "match": "\\b(?<!\\.)READ|EXECUTE|ITERATE|REVERSE|SORT\\b(?!\\.)"
        }
      ]
    },
    "statements": {
      "patterns": [
        {
          "include": "#builtin-objects"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#string"
        },
        {
          "include": "#number"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.relational.bst",
          "match": "<|>"
        },
        {
          "name": "keyword.operator.comparison.bst",
          "match": "\\="
        },
        {
          "name": "keyword.operator.arithmetic.bst",
          "match": "\\+|-|\\*"
        },
        {
          "name": "keyword.operator.assignment.bst",
          "match": ":\\="
        }
      ]
    },
    "builtin-objects": {
      "patterns": [
        {
          "name": "keyword.control.bst",
          "match": "\\b(?<!\\.)if\\$|while\\$\\$(?=\\s)"
        },
        {
          "name": "support.function.bst",
          "match": "\\b(?<!\\.)(add.period\\$|call.type\\$|change.case\\$|chr.to.int\\$|cite\\$|duplicate\\$|empty\\$|format.name\\$|int.to.chr\\$|int.to.chr\\$|int.to.str\\$|missing\\$|newline\\$|num.names\\$|pop\\$|preamble\\$|purify\\$|quote\\$|skip\\$|stack\\$|substring\\$|swap\\$|text.length\\$|text.prefix\\$|top\\$|type\\$|warning\\$|width\\$|write\\$)(?=\\s)"
        },
        {
          "name": "support.constant.bst",
          "match": "\\b(?<!\\.)(entry.max\\$|global.max\\$)(?=\\s)"
        },
        {
          "name": "support.variable.bst",
          "match": "\\b(?<!\\.)sort.key\\$(?=\\s)"
        },
        {
          "name": "support.function.entrytype.bst",
          "match": "\\b(?<!\\.)(article|book|booklet|conference|inbook|incollection|inproceedings|manual|mastersthesis|misc|phdthesis|proceedings|techreport|unpublished|default.type)\\b(?![.$])"
        },
        {
          "name": "support.variable.field.bst",
          "match": "\\b(?<!\\.)(address|author|booktitle|chapter|edition|editor|howpublished|institution|journal|key|month|note|number|organization|pages|publisher|school|series|title|type|volume|year)\\b(?![.$])"
        }
      ]
    },
    "string": {
      "name": "string.quoted.double.bst",
      "begin": "\\\"",
      "end": "\\\"",
      "patterns": [
        {
          "name": "constant.character.escape.bst",
          "match": "\\\\\\\""
        }
      ]
    },
    "number": {
      "name": "constant.numeric.bst",
      "match": "\\#\\d+\\b"
    },
    "comments": {
      "name": "comment.line.percentage.bst",
      "begin": "%",
      "end": "$"
    }
  }
}
